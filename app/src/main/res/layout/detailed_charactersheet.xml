<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Char_Sex"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Sex"
        app:layout_constraintBottom_toTopOf="@+id/Char_Experience"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Char_Age"
        app:layout_constraintTop_toBottomOf="@+id/Char_Class" />

    <TextView
        android:id="@+id/Char_Age"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Age"
        app:layout_constraintEnd_toStartOf="@+id/Char_Sex"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/Char_Class"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Class"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/Notes"
        android:layout_width="371dp"
        android:layout_height="350dp"
        android:text="Notes:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Char_Level" />

    <TextView
        android:id="@+id/Char_Level"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Level:"
        app:layout_constraintBottom_toTopOf="@+id/Notes"
        app:layout_constraintEnd_toStartOf="@+id/Char_Experience"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Char_Age" />

    <TextView
        android:id="@+id/Char_Experience"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text=" xp"
        app:layout_constraintBottom_toTopOf="@+id/Notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Char_Level"
        app:layout_constraintTop_toBottomOf="@+id/Char_Sex" />

    <TextView
        android:id="@+id/Char_Race"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Race"
        app:layout_constraintBottom_toTopOf="@+id/Char_Age"
        app:layout_constraintEnd_toStartOf="@+id/Char_Class"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="355dp"
        android:layout_height="334dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>